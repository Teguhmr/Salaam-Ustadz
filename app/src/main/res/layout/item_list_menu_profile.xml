<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:paddingHorizontal="@dimen/_20sdp"
    android:gravity="center_vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingVertical="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">
    <ImageView
        android:id="@+id/icon_menu"
        tools:src="@drawable/ic_user"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"/>
    <TextView
        android:id="@+id/name_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_toEndOf="@id/icon_menu"
        tools:text="Edit Profile"
        android:fontFamily="@font/avenir_lt_std_85_heavy"
        android:textColor="@color/color_text_green_500"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>
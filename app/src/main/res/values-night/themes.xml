<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SalaamUstadzApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_yellow_green</item>
        <item name="colorPrimaryVariant">@color/hard_yellow_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/hard_yellow_green</item>
    </style>

    <style name="my_dialog_theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/hard_yellow_green</item>                   <!--header background-->
        <item name="android:windowBackground">@color/soft_yellow_green</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/hard_yellow_green</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/hard_yellow_green</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/hard_yellow_green</item>    <!--days of the week-->
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
    </style>
    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>

    <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>
</resources>
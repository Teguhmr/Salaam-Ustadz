<resources>
    <!-- Base application theme. -->
    <style name="Theme.SalaamUstadzApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_yellow_green</item>
        <item name="colorPrimaryVariant">@color/hard_yellow_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/soft_yellow_green</item>
        <item name="colorPrimaryDark">@color/hard_yellow_green</item>
        <item name="colorAccent">@color/white</item>

    </style>
    <style name="AppTheme.NoActionbar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleEnabled">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>-->
    </style>

    <style name="MyOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_selector</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/soft_yellow_green</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/hard_yellow_green</item>
    </style>

    <style name="Theme.App.ImagePreview" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@drawable/bottomsheet_radius_border</item>
    </style>
    <style name="bottomSheetStyle_accountdetail" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_accountdetail</item>
    </style>
    <style name="Modal_accountdetail" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/accountdetail_bottomsheet</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator_active</item>
    </style>

    <style name="my_dialog_theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/hard_yellow_green</item>                   <!--header background-->
        <item name="android:windowBackground">@color/soft_yellow_green</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/hard_yellow_green</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/hard_yellow_green</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/hard_yellow_green</item>    <!--days of the week-->
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
    </style>
    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>

    <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/hard_yellow_green</item>
    </style>

    <style name="ThemeOverlay.BottomNavView" parent="">
        <item name="colorPrimary">@color/dark_blue_primary</item>
        <item name="colorOnSurface">@color/icon_bottom_grey</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/avenir_lt_std_55_roman</item>
    </style>

    <style name="bottomSheetStyle_longpressdelchat" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_longpresschatdel</item>
    </style>

    <style name="Modal_longpresschatdel" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/longpress_chat_bottomsheet</item>
    </style>

    <style name="bottomSheetStyle_attachmentpopup" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal_attachmentpopup</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Modal_attachmentpopup" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/attachmentbottomsheet_background</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="android:textColor">@color/bg_text_chip_state_list</item>
    </style>
</resources>